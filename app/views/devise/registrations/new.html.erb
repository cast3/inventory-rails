<%= image_tag("svgs/Bg-register.svg", alt: "bg-inventory", class:"absolute bottom-0 left-0 object-contain object-center h-[140px] w-[170px] md:w-[250px] md:h-[410px] select-none  pointer-events-none") %>
<div class="container min-h-full mx-auto flex flex-col md:flex-row justify-center items-center py-[2rem] sm:px-[1rem]">
	<div class="max-w-md w-full">
		<%= render 'devise/shared/devise_heading', title: 'Registrate' %>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mt-8"}) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>
			<div class="mb-2">
				<% prefilled_email = params[:email].present? ? params[:email] : '' %>
				<input aria-label="Email address" name="user[email]" id="user_email" type="email" required value="<%= prefilled_email %>" class="appearance-none rounded-b-md rounded-t-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" placeholder="Correo" />
			</div>
			<div class="mb-2">
				<%= password_field "user", :password, placeholder: "Contraseña", class: "appearance-none rounded-b-md rounded-t-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
			</div>
			<div class="mb-2">
				<% same_password_as_above = params[:password].present? ? params[:password] : '' %>
				<% if same_password_as_above.present? %>
					<%= password_field "user", :password_confirmation, placeholder: "Confirmar contraseña", class: "appearance-none rounded-b-md rounded-t-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5", value: same_password_as_above %>
				<% else %>
					<%= password_field "user", :password_confirmation, placeholder: "Confirmar contraseña", class: "appearance-none rounded-b-md rounded-t-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
				<% end %>
			</div>
			<div class="mt-6">
				<button type="submit" data-turbo="false" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-primary hover:bg-primary-hover focus:outline-none transition duration-150 ease-in-out">
					<span class="absolute left-0 inset-y-0 flex items-center pl-3">
						<svg class="h-5 w-5 transition ease-in-out duration-150" fill="white" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
						</svg>
					</span>
					Crear
				</button>
			</div>
		<% end %>
		<%= link_to 'Ingresa', new_user_session_path, class: "w-full whitespace-nowrap text-sm font-medium flex items-center justify-end px-4 py-2  shadow-sm text-black decoration-primary underline decoration-solid" %>
	</div>
</div>
