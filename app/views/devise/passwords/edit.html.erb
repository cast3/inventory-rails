<h2>Cambiar contraseña</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
	<%= render "devise/shared/error_messages", resource: resource %>
	<%= f.hidden_field :reset_password_token %>
	<div class="field">
		<%= f.label :password, "Nueva contraseña" %><br />
		<% if @minimum_password_length %>
			<em>(<%= @minimum_password_length %> Caracteres minimos)</em><br />
		<% end %>
		<%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Confirmar contraseña" %><br />
		<%= f.password_field :password_confirmation, autocomplete: "new-password", autofocus: true, %>
	</div>
	<div class="actions">
		<%= f.submit "Guardar cambios" %>
	</div>
<% end %>
<%= render "devise/shared/links" %>
