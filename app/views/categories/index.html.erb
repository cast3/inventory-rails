<div class="w-full my-5">
	<% if notice.present? %>
		<p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
	<% end %>
	<div class="flex justify-between items-center">
		<h1 class="font-bold text-4xl">Categorías</h1>
		<%= link_to 'Nueva categoría', new_category_path, class: "rounded-lg py-3 px-5 bg-primary hover:bg-primary-hover-700 text-white block font-medium" %>
	</div>
	<div id="categories" class="mt-5 overflow-x-auto rounded-lg shadow-md">
		<table class="table-auto w-full">
			<thead class="bg-primary text-white">
			<tr>
				<th class="px-4 py-2 tracking-wider">Nombre</th>
				<th class="px-4 py-2 tracking-wider">Fecha creación</th>
				<th class="px-4 py-2 tracking-wider">Acciones</th>
			</tr>
			</thead>
			<tbody>
				<%= render @categories %>
			</tbody>
		</table>
	</div>
</div>
