<div id="<%= dom_id category %>" class="inline-flex items-center px-2 py-1 m-1 text-sm font-medium text-white rounded hover:bg-white" style="background-color: <%= random_dark_color %>;">
  <%= link_to edit_category_path(category) do %>
    <span class="mr-2 hover:underline hover:decoration-solid">
      <%= category.nombre %>
    </span>
  <% end %>
  <%= button_to category_path(category), method: :delete, class: 'inline-flex items-center text-sm text-blue-400 bg-transparent translate-y-[3px] rounded-sm hover:bg-blue-200 hover:text-blue-900' do %>
    <svg aria-hidden="true" class="w-3.5 h-3.5 flex " fill="#fff" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
    </svg>
    <span class="sr-only">Remove badge</span>
  <% end %>
</div>
