<section class="my-5 w-full">
  <div class="mx-auto max-w-screen-xl px-4">
    <h1 class="font-bold text-4xl">Productos</h1>
    <div class="relative overflow-hidden sm:rounded-lg">
      <div class="flex flex-col items-center justify-between space-y-3 py-4 px-px md:flex-row md:space-x-4 md:space-y-0">
        <%# -----------------Search ------------------- %>
        <div class="w-full md:w-1/2">
          <%= form_with url: "", method: :get, data: {turbo_frame: "products", turbo_action: "advance"}, class:"flex items-center" do |form| %>
            <label for="simple-search" class="sr-only">
              Buscar
            </label>
            <div class="relative w-full">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <%= image_tag "svgs/IconSearch.svg", class: "text-gray-500 h-5 w-5" %>
              </div>
              <%= form.search_field :query, placeholder: "Buscar producto", class: "focus:ring-primary-500 focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2 pl-10 text-sm text-gray-900", id:"simple-search", value: params[:query], oninput: "this.form.requestSubmit()" %>
            </div>
          <%end%>
          <%# -----------------		--		 ------------------- %>
        </div>
        <div class="flex w-full flex-shrink-0 flex-col items-stretch justify-end space-y-2 md:w-auto md:flex-row md:items-center md:space-x-3 md:space-y-0">
          <div class="flex w-full items-center space-x-3 md:w-auto">
            <%# ----------------- Nuevo producto ------------------- %>
            <%= link_to new_product_path, class: "hover:text-primary-700 flex w-full w-[15dvw] items-center justify-center rounded-lg border border-gray-200 bg-white px-4 md:px-6 py-2 text-sm font-medium text-gray-900 hover:bg-gray-200 hover:border hover:border-black focus:z-10 focus:outline-none focus:ring-4 focus:ring-gray-200 whitespace-nowrap shadow-lg" do %>
              <%= image_tag "svgs/IconPlus.svg", class: "text-primary stroke-primary h-6 mr-3" %>
              Nuevo producto
            <% end %>
            <%# -----------------		--		 ------------------- %>
            <%# ----------------- Exportar a excel ------------------- %>
            <%= link_to products_path( id: @Products, format: :xlsx), class: "hover:text-primary-700 flex w-full w-[15dvw] items-center justify-center rounded-lg border border-gray-200 bg-white px-4 md:px-6 py-2 text-sm font-medium text-gray-900 hover:bg-gray-200 hover:border hover:border-black focus:z-10 focus:outline-none focus:ring-4 focus:ring-gray-200 whitespace-nowrap shadow-lg" do %>
              Exportar
              <%= image_tag "svgs/IconExcel.svg", class: "text-primary stroke-primary h-6 ml-3" %>
            <% end %>
            <%# -----------------		--		 ------------------- %>
          </div>
        </div>
      </div>
      <div class="w-full h-[50vh] flex flex-col bg-white shadow-lg">
        <div class="overflow-x-auto">
          <table class="w-full text-left text-sm text-gray-500">
            <thead class="text-xs uppercase sticky top-0 bg-primary text-white">
              <tr>
                <th scope="col" class="px-4 py-3 whitespace-nowrap">
                  <%= sort_link_to "Nombre del producto", :nombre %>
                </th>
                <th scope="col" class="px-4 py-3 whitespace-nowrap">
                  <%= sort_link_to "CategorÃ­a", :category_id %>
                </th>
                <th scope="col" class="px-4 py-3 whitespace-nowrap">
                  <%= sort_link_to "Referencia", :referencia %>
                </th>
                <th scope="col" class="px-4 py-3 whitespace-nowrap">
                  <%= sort_link_to "Precio", :precio %>
                </th>
                <th scope="col" class="px-4 py-3 whitespace-nowrap">
                  <%= sort_link_to "Fecha de caducidad", :fecha_caducidad %>
                </th>
                <th scope="col" class="px-4 py-3 whitespace-nowrap">
                  <%= sort_link_to "Tipo", :Tipo %>
                </th>
                <th scope="col" class="px-4 py-3 whitespace-nowrap">
                  <span class="sr-only">Acciones</span>
                </th>
              </tr>
            </thead>
            <tbody class="overflow-auto">
              <%= render @products %>
            </tbody>
          </table>
        </div>
      </div>
      <%== render partial: 'shared/pagination_nav', locals: {pagy: @pagy} %>
    </div>
  </div>
</section>
