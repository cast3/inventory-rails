<%= form_with(model: movimiento, class: "contents") do |form| %>
	<% if movimiento.errors.any? %>
		<div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
			<h2><%= pluralize(movimiento.errors.count, "error") %> prohibited this movimiento from being saved:</h2>
			<ul>
				<% movimiento.errors.each do |error| %>
					<li><%= error.full_message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="my-5">
		<%= form.label :tipo %>
		<%= form.text_field :tipo, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
	</div>
	<div class="my-5">
		<%= form.label :fecha %>
		<%= form.datetime_field :fecha, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
	</div>
	<div class="my-5">
		<%= form.label :cliente_id %>
		<%= form.text_field :cliente_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
	</div>
	<div class="inline">
		<%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
	</div>
<% end %>
