<div class="mx-auto md:w-2/3 w-full flex mt-5">
  <div class="mx-auto">
    <%= render @provider %>
    <%= link_to 'Editar', edit_provider_path(@provider), class: "mt-2 rounded-lg py-3 px-5 bg-gray-300 hover:text-white hover:bg-gray-400 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Eliminar', provider_path(@provider), method: :delete, class: "rounded-lg ml-2 rounded-lg py-3 px-5 bg-red-500 text-white hover:bg-primary-hover-700 inline-block font-medium" %>
    </div>
    <%= link_to 'Volver a proveedores', providers_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-300 hover:text-white hover:bg-gray-400 inline-block font-medium" %>
  </div>
</div>
