<!DOCTYPE html>
<html>
	<head>
		<%= metamagic site: ENV['COMPANY_NAME'], title: [:site, :title], separator: " | " %>
		<meta name="viewport" content="width=device-width,initial-scale=1">
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
		<%= favicon_link_tag 'data:image/svg+xml;base64,' %>
		<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
		<%= javascript_importmap_tags %>
	</head>
	<body>
		<% if user_signed_in? %>
			<main class="container mx-auto">
				<%= render "shared/header" %>
				<%= render "shared/flash" %>
				<div class="mx-0 p-6 md:ml-[200px]">
					<%= yield %>
				</div>
			</main>
			<%= render partial: "shared/script_tags" %>
		<% else %>
			<main class="container mx-auto mt-[4dvh] px-6">
				<%= render "shared/flash" %>
				<%= yield %>
			</main>
			<%= render partial: "shared/script_tags" %>
		<% end %>
	</body>
</html>
