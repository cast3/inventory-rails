<% visibility = 'hidden' unless (flash[:alert].present? || flash[:notice].present?) %>
<div class="<%= visibility %> relative z-50">
	<div class="absolute inset-0 flex justify-center items-center">
		<% if flash[:alert].present? %>
			<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative flex gap-x-2 duration-500 ease-in-out transform translate-y-full" role="alert">
				<strong class="font-bold">Oh! </strong>
				<span class="block sm:inline"><%= alert %></span>
				<span id="flash_alert_close">
					<svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
				</span>
			</div>
		<% end %>
		<% if flash[:notice].present? %>
			<div class="bg-lime-50 border border-green-400 text-green-700 px-4 py-3 rounded relative flex gap-x-2 duration-500 ease-in-out transform translate-y-full" role="alert">
				<strong class="font-bold">En hora buena! </strong>
				<span class="block sm:inline"><%= notice %></span>
				<span id="flash_alert_close">
					<svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
				</span>
			</div>
		<% end %>
	</div>
</div>
</div>
<!-- Flash management -->
<script type="text/javascript">
	var flashAlert = document.getElementById('flash_alert_close');
	if (flashAlert !== null) {
		document.getElementById('flash_alert_close').addEventListener('click', function() {
			this.parentElement.remove();
		});
	}
	var autoCloseFlashAlert = document.getElementById('flash_alert_close');
	if (autoCloseFlashAlert !== null) {
		setTimeout(function() {
			autoCloseFlashAlert.parentElement.remove();
		},10000);
	}
</script>
